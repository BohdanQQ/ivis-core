{
  "name": "ivis-core",
  "version": "1.0.0",
  "description": "Just to make my dev environment a little easier to use.",
  "main": "index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "watch": "npm-run-all --parallel watch-client watch-server",
    "dev-server": "npm run build && npm run watch-server",
    "dev-client": "npm run build && npm run watch-client",

    "build": "npm run build --prefix client/",
    "watch-client": "npm run watch --prefix client/",
    "watch-server": "NODE_ENV=development nodemon -w server -i server/files -- server/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dburian/ivis-core.git"
  },
  "author": "Tomas Bures",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dburian/ivis-core/issues"
  },
  "homepage": "https://github.com/dburian/ivis-core#readme",
  "devDependencies": {
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {}
}
